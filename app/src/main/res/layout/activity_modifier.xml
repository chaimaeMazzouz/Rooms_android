<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ModifierActivity">
    <EditText
        android:id="@+id/NumP_Mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:hint="Num produit"
        android:inputType="number"/>
    <EditText
        android:id="@+id/Des_Mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:hint="Designation"/>
    <EditText
        android:id="@+id/PrixU_Mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:hint="Prix Unitaire"
        android:inputType="numberDecimal"/>
    <Button
        android:id="@+id/Rechercher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rechercher"
        android:layout_marginTop="20dp"
        android:onClick="Rechercher"
        />
    <Button
        android:id="@+id/Modifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier produit"
        android:layout_marginTop="20dp"
        android:onClick="Modifier_Produit"/>
    <Button
        android:id="@+id/Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:layout_marginTop="20dp"
        android:onClick="Menu_back"/>
</LinearLayout>